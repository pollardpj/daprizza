@page "/"

<PageTitle>Home</PageTitle>

<EditForm Model="Model" FormName="NewOrder" OnValidSubmit="OnValidSubmit">
    <FluentValidationValidator DisableAssemblyScanning="true" />
    <ValidationSummary />
    <div class="form-group">
        <label>Some Value: </label>
        <InputText @bind-Value="Model.SomeValue" />
        <ValidationMessage For="@(() => Model.SomeValue)"></ValidationMessage>
    </div>
    <div class="form-group">
        <label>Postal/ZIP Code: </label>
        <InputText @bind-Value="Model.Address.Postcode" />
    </div>
    <div class="form-group">
        <label>House Number or Name: </label>
        <InputText @bind-Value="Model.Address.HouseNumberOrName" />
    </div>
    <div class="mt-3">
        <button type="submit">Submit New Order</button>
    </div>
</EditForm>

@code {
    [SupplyParameterFromForm]
    public Order Model { get; set; }

    protected override Task OnInitializedAsync()
    {
        Model = new Order();

        return base.OnInitializedAsync();
    }

    private async Task OnValidSubmit()
    {

    }
}
